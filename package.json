{
    "name": "kj-donations",
    "version": "0.1.0",
    "description": "Free of tax donation calculator",
    "main": "webpack.config.js",
    "scripts": {
        "clean-build": "rm -rf build",
        "build": "npm run clean-build && cross-env NODE_ENV=development \"./node_modules/.bin/webpack\"",
        "buildw": "npm run clean-build && cross-env NODE_ENV=development \"./node_modules/.bin/webpack\" -w",
        "clean-prod": "rm -rf prod",
        "prod": "npm run clean-prod && cross-env NODE_ENV=production \"./node_modules/.bin/webpack\"",
        "prodw": "npm run clean-prod && cross-env NODE_ENV=production \"./node_modules/.bin/webpack\" -w",
        "start": "npm run build && live-server --port=8082 --open=\"build/index.html\"",
        "start-prod": "npm run prod && live-server --port=8082 --open=\"prod/index.html\"",
        "test": "./node_modules/.bin/mocha tests",
        "testw": "./node_modules/.bin/mocha tests -w",
        "prettier": "prettier --write src/**/*.{js,scss,ts}"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/AdamWalkowski/kj-donations"
    },
    "author": "Adam Walkowski <adam.walkowski@inperceptic.com>",
    "license": "ISC",
    "dependencies": {},
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/polyfill": "^7.11.5",
        "@babel/preset-env": "^7.12.1",
        "@types/chai": "^4.2.12",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.2",
        "babel-loader": "^8.1.0",
        "chai": "^4.2.0",
        "copy-webpack-plugin": "^5.1.2",
        "cross-env": "^7.0.2",
        "css-loader": "^4.3.0",
        "html-webpack-plugin": "^4.5.0",
        "ignore-styles": "^5.0.1",
        "mini-css-extract-plugin": "^0.11.3",
        "mocha": "^8.1.3",
        "node-sass": "^4.14.1",
        "optimize-css-assets-webpack-plugin": "^5.0.4",
        "prettier": "2.1.2",
        "rimraf": "^3.0.2",
        "sass-lint": "^1.13.1",
        "sass-loader": "^8.0.2",
        "script-ext-html-webpack-plugin": "^2.1.4",
        "source-map-loader": "^0.2.4",
        "style-loader": "^1.3.0",
        "ts-loader": "^7.0.3",
        "ts-mocha": "^7.0.0",
        "ts-node": "^9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.9.7",
        "webpack": "^4.44.2",
        "webpack-cli": "^3.3.12"
    }
}
